<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.yzq.mapper.StudentsMapper">
    <resultMap id="map" type="com.yzq.pojo.Student">
        <result column="name" property="name"></result>
    </resultMap>
    <select id="getStudents"  resultMap="map">
       select * from students where id= #{id};
    </select>
    <insert id="addStudent" parameterType="com.yzq.pojo.Student" >
        insert into students (id,name,age,sex,dep_id)  values (#{id},#{name},#{age},#{sex},#{dep_id})
    </insert>
</mapper>